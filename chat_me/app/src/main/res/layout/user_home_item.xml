<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#010101"

    android:layout_height="match_parent"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <ProgressBar
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>




    <ImageView
        android:id="@+id/last_refresh_btn"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/baseline_refresh_24"

 />



        <androidx.cardview.widget.CardView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="1dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardMaxElevation="18dp"
            android:outlineSpotShadowColor="@color/black"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:id="@+id/likes_double_click"
            android:orientation="vertical">







            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/double_likes"
                android:layout_height="match_parent">




            <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:color/darker_gray"
            android:scaleType="centerCrop"



            android:id="@+id/home_page_image"/>



                <RelativeLayout
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"

                    android:id="@+id/picture_change"/>




                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    xmlns:app="http://schemas.android.com/apk/res-auto"



                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_centerInParent="true"

                    android:src="@drawable/homeheartss"
                    app:civ_border_color="@android:color/black"
                    android:id="@+id/likes_icon"
                    android:visibility="gone"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:paddingBottom="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:orientation="horizontal">




                    <TextView

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"


                                                android:text="Priyeranjan"
                                                android:id="@+id/home_page_name"
                                                android:textColor="@android:color/white"
                                                android:textSize="@dimen/_28sdp"

                        android:textStyle="bold"



                                                />


                                            <ImageView





                                                android:layout_marginStart="@dimen/_1sdp"

                                                android:layout_width="@dimen/_15sdp"
                                                android:layout_height="@dimen/_10sdp"

                                                android:layout_gravity="center"

                                                android:layout_alignParentEnd="true"
                                                android:src="@drawable/homeheartss"

                                                android:visibility="gone"
                                                android:id="@+id/likes_showns"




                                                />



                </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                    >


                        <ImageView






                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"

                            android:layout_gravity="center"

                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ages_icon"

                            android:id="@+id/age_logo"




                            />
                        <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="39"
                        android:id="@+id/age"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp"



                        android:layout_marginStart="@dimen/_10sdp"


                        />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView






                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"

                            android:layout_gravity="center"

                            android:layout_alignParentEnd="true"
                            android:src="@drawable/educations_logo"

                            android:id="@+id/education_logo"




                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Not Mention"
                            android:id="@+id/course"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_14sdp"



                            android:layout_marginStart="@dimen/_10sdp"


                            />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>




        </LinearLayout>


        </androidx.cardview.widget.CardView>




</RelativeLayout>