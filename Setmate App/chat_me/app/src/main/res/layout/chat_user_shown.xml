<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/name_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@color/black"
        android:layout_marginBottom="@dimen/_10sdp"

        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_chat_profile_images"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"

            android:layout_marginStart="@dimen/_10sdp"
            android:visibility="gone"

            android:src="@color/black" />



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of student"
            android:layout_marginLeft="@dimen/_15sdp"

            android:textColor="@color/white"
            android:visibility="gone"
            android:id="@+id/user_chat_name"
            android:textSize="@dimen/_15sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="few seconds ago"
        android:visibility="gone"
        android:id="@+id/about_users"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textColor="@color/white"

        android:textSize="@dimen/_10sdp"/>


</LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:id="@+id/massage_down"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_25sdp"
            />





    </LinearLayout>



</RelativeLayout>